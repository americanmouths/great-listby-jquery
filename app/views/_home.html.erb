<div class="row">
  <% if user.books.present? %>
    <div class="col-md-4">
      <h3>Books you're currently reading:</h3>
        <% user.books_by_status("Currently reading").each do |book| %>
          <p><%= link_to book.title, book_path(book) %></p>
        <% end %>
    </div>

    <div class="col-md-4">
    <h3>Books you want to read but haven't yet:</h3>
      <% user.books_by_status("Want to read").each do |book| %>
        <p><%= link_to book.title, book_path(book) %></p>
      <% end %>
    </div>

    <div class="col-md-4">
    <h3>Books you've already read:</h3>
      <% user.books_by_status("Already read").each do |book| %>
        <p><%= link_to book.title, book_path(book) %></p>
      <% end %>
    </div>
<% end %>
</div>
