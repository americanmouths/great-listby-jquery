<center><h1><u>The Great Listby Books</u></h1>
<%= form_tag(books_path, method: :get) do %>
  <%= text_field_tag :term, params[:term] %>
  <%= submit_tag 'Search By Title', name: nil, class: "btn btn-default" %>
<% end %>
</center>
<ul>
  <% @books.each do |book| %>
    <span class="glyphicon glyphicon-chevron-right"></span> <%= link_to book.title, book_path(book.id), class: "book_index" %><br>
<% end %>
</ul>

<div id="books_index">
</div>
