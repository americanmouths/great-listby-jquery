<div class="row">
  <div class="col-sm-12">
    <% if current_user %>
      <center>
        <h1>Welcome back <u><%= current_user.email %>!</u></h1>
      </center>
    </div>
    <%= render partial: '/home', locals: {user: current_user} %>
  <% else %>
  <center>
    <h1>Welcome to the Great Listby!</h1>
